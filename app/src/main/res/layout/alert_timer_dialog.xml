<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setTimerOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_outline_edit"
        android:drawableEnd="@drawable/ic_set_timer"
        android:drawablePadding="@dimen/_10sdp"

        android:hint="@string/on_time"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="  @+id/setTimerOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setTimerOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_outline_edit"
        android:drawableEnd="@drawable/ic_set_timer"
        android:drawablePadding="@dimen/_10sdp"

        android:hint="@string/off_time"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/setTimerOn"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>